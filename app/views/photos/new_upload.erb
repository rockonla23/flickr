<form action="/photos/upload" method="post" enctype="multipart/form-data" class="form-horizontal">
  <div class="control-group">
    <label class="control-label" for="inputEmail">Choose an album</label>
    <div class="controls">
      <select name="album_id">
        <% @album.each do |a| %>
          <option value=<%= a.id %>><%= a.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputEmail">Choose an album</label>
    <div class="controls">
      <input type="file" name="path">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit">Upload</button>
    </div>
  </div>
</form>
